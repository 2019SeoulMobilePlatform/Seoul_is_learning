<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Class.ClassReservation"
    android:background="@color/white">

    <!-- 상단 타이틀바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/res_class_back_btn"
            android:onClick="ClassReservationBackButtonClicked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/res_class_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="클래스 제목"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 프로필 사진 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="240dp">
                    <!-- 바탕뷰 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <!-- 이미지 테두리-->
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="170dp"
                            android:layout_centerInParent="true"
                            android:src="@color/colorPrimary" />
                        <!-- 클래스 이미지 -->
                        <ImageView
                            android:id="@+id/res_class_image"
                            android:layout_width="240dp"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/class3"
                            android:background="#FFFFFF"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:maxLines="1"
                            android:id="@+id/res_class_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="클래스 설명"
                            android:textColor="#5D5D5D"
                            android:textSize="16dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <!-- 클래스 장소 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:text="수업 장소" />
                    <EditText
                        android:id="@+id/res_class_place"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7.5"
                        android:editable="false"
                        android:text="클래스 지역"
                        android:background="@null"/>
                </LinearLayout>

                <!-- 수업 날짜 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:text="수업 날짜" />

                    <EditText
                        android:id="@+id/res_class_date"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7.5"
                        android:editable="false"
                        android:text="2019.09.01. ~ 2019.09.01."
                        android:background="@null"/>
                </LinearLayout>

                <!-- 수업 시간 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:text="수업 인원" />

                    <EditText
                        android:id="@+id/res_class_time"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7.5"
                        android:editable="false"
                        android:text="강사 마음대로 받겠습니다."
                        android:background="@null"/>
                </LinearLayout>


                <!-- 수업 금액 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:text="수업 비용" />
                    <EditText
                        android:id="@+id/res_class_price"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7.5"
                        android:editable="false"
                        android:text="50000원"
                        android:background="@null"/>
                </LinearLayout>

                <!-- 확인 버튼 -->
                <Button
                    android:id="@+id/res_class_confirm"
                    android:onClick="ClassReservationFinalButtonClicked"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="클래스 예약"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>